// CREATING A Brick RECORD POPULATES TIMESTAMP
{
  executeOnEvent("Brick", "create");

  String ref = "Brick/Site/Created_at";
  String val = getFieldValue(ref);

  assert(val != null);
  assert(val.length() == "yyyy-MM-dd".length());
}

